<h1>Enter your post</h1>

<form action="<%= user_posts_url %>" method="POST" >
  <%= auth_token %>

  <label>Post Title:
    <input type="string"
        name='post[title]'
        value='<%= @post.title %>'>
  </label>
  <p>

  <label>Put your post here
    <input type="text"
        name='post[body]'
        value='<%= @post.body %>'>
  </label>

  <br>

  <label> Link #1 Title:
    <input type="text" name="link[1][title]">
  </label>
  <br>
  <label> Link #1 URL:
    <input type="text" name="link[1][url]">
  </label>
  <br>

  <label> Link #2 Title:
    <input type="text" name="link[2][title]">
  </label>
  <br>
  <label> Link #2 URL:
    <input type="text" name="link[2][url]">
  </label>
  <br>

  <label> Link #3 Title:
    <input type="text" name="link[3][title]">
  </label>
  <br>
  <label> Link #3 URL:
    <input type="text" name="link[3][url]">
  </label>
  <br>

    <% current_user.circles.each do |circle| %>
    <label>
    <input type="checkbox" name="post[circle_ids][]" value = "<%= circle.id %>">
    <%= circle.name %>
    </label>
    <br>
    <% end  %>
  <p><input type="submit" value="Submit Post"></p>
</form>
